<Window x:Class="Assembly.WPF.Program.AddProgramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assembly.WPF.Program"
        mc:Ignorable="d"
        Title="Add program" Height="283" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Program code:" FontSize="16" Margin="10 0 10 0"/>
            <TextBox Margin="10 0 10 0" Name="ProgramCodeTextBox"/>
            <TextBlock Text="Name:" FontSize="16" Margin="10 0 10 0"/>
            <TextBox Margin="10 0 10 0" Name="NameTextBox"/>
            <TextBlock Text="Target:" FontSize="16" Margin="10 0 10 0"/>
            <TextBox Margin="10 0 10 0" Name="TargetTextBox"/>
            <TextBlock Text="Start date:" FontSize="16" Margin="10 0 10 0"/>
            <TextBox Margin="10 0 10 0" Name="StartDateTextBox"/>
            <TextBlock Text="Max members:" FontSize="16" Margin="10 0 10 0"/>
            <TextBox Margin="10 0 10 0" Name="MaxMembersTextBox"/>
            <Button Content="Add" Margin="10" Padding="2" Click="AddProgramClick"/>
        </StackPanel>
    </Grid>
</Window>
