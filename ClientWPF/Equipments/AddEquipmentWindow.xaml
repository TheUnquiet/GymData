<Window x:Class="Assembly.WPF.Equipments.AddEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assembly.WPF.Equipments"
        mc:Ignorable="d"
        Title="AddEquipmentWindow" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="DeviceType:" FontSize="16" Margin="10 0 10 0"/>
            <TextBox Margin="10 0 10 0" Name="DevicetypeTextBox"/>
            <Button Content="Add" Margin="10" Padding="2" Click="AddEquipmentClick"/>
        </StackPanel>
    </Grid>
</Window>
