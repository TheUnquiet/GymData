<Window x:Class="Assembly.WPF.Reservations.SelectEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assembly.WPF.Reservations"
        mc:Ignorable="d"
        Title="SelectEquipmentWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Content="Select equipment" HorizontalAlignment="Center" FontSize="16"/>
        <ListBox Grid.Row="1" Margin="5" Name="EquipmentListBox" MouseDoubleClick="EquipmentListBox_MouseDoubleClick"/>
        <Button Grid.Row="2" Margin="5" Content="Close" />
    </Grid>
</Window>
