<Window x:Class="Assembly.WPF.Members.AddMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assembly.WPF.Members"
        mc:Ignorable="d"
        Title="AddMemberWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Add member" HorizontalAlignment="Center"/>

            <TextBlock Text="First Name" />
            <TextBox x:Name="FirstNameTextBox" />

            <TextBlock Text="Last Name" Margin="0,10,0,0" />
            <TextBox x:Name="LastNameTextBox" />

            <TextBlock Text="Email" Margin="0,10,0,0" />
            <TextBox x:Name="EmailTextBox" />

            <TextBlock Text="Address" Margin="0,10,0,0" />
            <TextBox x:Name="AddressTextBox" />

            <TextBlock Text="Birthday" Margin="0,10,0,0" />
            <DatePicker x:Name="BirthdayDatePicker" />

            <TextBlock Text="Interest" Margin="0,10,0,0" />
            <TextBox x:Name="InterestTextBox" />

            <Button Content="Save" Margin="0,20,0,0" Click="AddMemberButton_Click" />
        </StackPanel>
    </Grid>
</Window>
