<Window x:Class="Assembly.WPF.Members.SearchMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assembly.WPF.Members"
        mc:Ignorable="d"
        Title="Search for a member" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Fill in an id:" FontSize="16" Margin="10 0 10 0"/>
            <TextBox Name="MemberId" Margin="10 0 10 0"/>
            <Button Content="Search" Margin="10" Padding="2" Click="SearchMemberClick"/>
        </StackPanel>
    </Grid>
</Window>
